@using System.Security.Claims

@{
    string displayName = "";
    
    if (User.Identity.IsAuthenticated)
    {
        // Try to get First Name
        displayName = User.FindFirst(ClaimTypes.GivenName)?.Value;

        // Fallback to Username/Email if First Name is missing
        if (string.IsNullOrEmpty(displayName))
        {
            displayName = User.Identity.Name;
        }

        // Cleanup: If it's an email, show only the part before '@'
        if (!string.IsNullOrEmpty(displayName) && displayName.Contains("@"))
        {
            displayName = displayName.Split('@')[0];
        }
    }
}

