        </div>

        <div id="chat-messages" class="card-body p-3 bg-light overflow-auto">
            <div class="d-flex align-items-start gap-2 mb-3">
                <div class="bg-white p-2 rounded-3 shadow-sm border" style="max-width: 80%;">
                    <small class="d-block text-muted mb-1" style="font-size: 0.7rem;">Cleo</small>
                    Hi! I'm Cleo. Ask me for Egypt travel advice! 🇪🇬
                </div>
            </div>
        </div>

        <div class="card-footer bg-white p-2 border-top">
            <div class="input-group">
                <input type="text" id="chat-input" class="form-control border-0 bg-light rounded-pill px-3" placeholder="Type a message...">
                <button id="chat-send-btn" class="btn btn-danger rounded-circle ms-2" style="width: 40px; height: 40px;">
                    <i class="bi bi-send-fill"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Elements
        const toggleBtn = document.getElementById('chat-toggle-btn');
        const closeBtn = document.getElementById('chat-close-btn');
        const chatWindow = document.getElementById('chat-window');
        const chatInput = document.getElementById('chat-input');
        const sendBtn = document.getElementById('chat-send-btn');
        const messagesContainer = document.getElementById('chat-messages');

        // ★ FIX 1: Force Close Logic
        closeBtn.addEventListener('click', () => {
            chatWindow.classList.add('d-none'); 
            chatWindow.style.display = 'none'; // Force hide
        });

        // ★ FIX 2: Force Open Logic
        toggleBtn.addEventListener('click', () => {
            if (chatWindow.classList.contains('d-none') || chatWindow.style.display === 'none') {
                chatWindow.classList.remove('d-none');
                chatWindow.style.display = 'flex'; // Force show
            } else {
                // If already open, clicking the bubble closes it
                chatWindow.classList.add('d-none');
                chatWindow.style.display = 'none';
            }
        });

        // 3. SEND MESSAGE Logic (Same as before)
        async function sendMessage() {
            const text = chatInput.value.trim();
            if (!text) return;

            addMessage('You', text, 'bg-danger text-white ms-auto');
            chatInput.value = '';
            
            const loadingId = addMessage('Cleo', 'Thinking...', 'bg-white text-muted fst-italic');

            try {
                const response = await fetch('/Chat/AskCleo', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ message: text })
                });

                const data = await response.json();
                document.getElementById(loadingId).remove();
                addMessage('Cleo', data.response, 'bg-white border shadow-sm');

            } catch (error) {
                document.getElementById(loadingId).remove();
                addMessage('Cleo', 'Sorry, connection error.', 'bg-warning text-dark');
            }
        }

        function addMessage(sender, text, cssClass) {
            const id = 'msg-' + Date.now();
            const align = sender === 'You' ? 'justify-content-end' : 'justify-content-start';
            const html = `
                <div id="${id}" class="d-flex ${align} mb-3 fade-in">
                    <div class="p-2 rounded-3 ${cssClass}" style="max-width: 80%;">
                        ${text}
                    </div>
                </div>`;
            messagesContainer.insertAdjacentHTML('beforeend', html);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
            return id;
        }

        sendBtn.addEventListener('click', sendMessage);
        chatInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });
    });
</script>    <script src="~/lib/jquery/dist/jquery.min.js"></script>
