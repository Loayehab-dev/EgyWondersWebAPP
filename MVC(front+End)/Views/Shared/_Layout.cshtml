<div id="chat-widget-container">
    <button id="chat-toggle-btn" class="btn btn-danger rounded-circle shadow-lg d-flex align-items-center justify-content-center">
        <i class="bi bi-chat-dots-fill fs-3 text-white"></i>
    </button>

    <div id="chat-window" class="card shadow-lg border-0 rounded-4 overflow-hidden d-none">
        
        <div class="card-header bg-danger text-white p-3 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2">
