@using MVC_front_End_.Models
@model IEnumerable<BookingDTO>

@{
    ViewData["Title"] = "My Trips";
}

<style>
    .trip-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .trip-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
    }

  /* Reverse the row so the "5" star is on the right visually, matching user expectation */
    .star-icon {
        display: flex;
        flex-direction: row-reverse; 
        justify-content: center;
        gap: 5px;
    }

    .rating-css input { display: none; }

    /* Default State: Grey Stars */
    .rating-css input + label { 
        font-size: 40px; 
        color: #ccc; 
        cursor: pointer; 
        transition: color 0.2s;
    }

    /* Active State: Yellow when Checked or Hovered */
    /* This logic works because we reversed the row: selecting "3" highlights "3, 2, 1" */
    .rating-css input:checked ~ label,
    .rating-css label:hover,
    .rating-css label:hover ~ label { 
        color: #ffc107; 
    }
</style>

<div class="container" style="margin-top: 100px; margin-bottom: 80px;">
    
    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <div>
            <h1 class="fw-bold mb-1">Trips</h1>
            <p class="text-muted mb-0">Manage your upcoming and past getaways</p>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-dark rounded-pill px-4 fw-bold">
            <i class="bi bi-search me-2"></i> Book a new stay
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success rounded-4 mb-4 d-flex align-items-center">
            <i class="bi bi-check-circle-fill me-2 fs-5"></i> @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger rounded-4 mb-4 d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i> @TempData["Error"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden position-relative trip-card">
                        
                        <div class="position-absolute top-0 end-0 m-3 z-2">
                            @if (item.Status == "Confirmed")
                            {
                                <span class="badge bg-success shadow-sm px-3 py-2 rounded-pill">Confirmed</span>
                            }
                            else if (item.Status == "Cancelled")
                            {
                                <span class="badge bg-danger shadow-sm px-3 py-2 rounded-pill">Cancelled</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark shadow-sm px-3 py-2 rounded-pill">@item.Status</span>
                            }
                        </div>
            <div class="w-100 position-relative" style="height: 180px;">
                @if (!string.IsNullOrEmpty(item.ListingPhotoUrl))
                {
                    <img src="https://localhost:7151@(item.ListingPhotoUrl)" 
                         class="w-100 h-100 object-fit-cover" 
                         alt="@item.ListingTitle"
                         onerror="this.src='https://via.placeholder.com/400x200?text=No+Image'">
                }
                else
                {
                    <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-muted">
                        <i class="bi bi-image fs-1"></i>
                    </div>
                }

    <div class="position-absolute bottom-0 start-0 m-3 mb-0" style="transform: translateY(50%);">
        <div class="bg-white p-1 rounded-circle shadow-sm">
            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold fs-4" style="width: 50px; height: 50px;">
                 @(string.IsNullOrEmpty(item.ListingTitle) ? "?" : item.ListingTitle.Substring(0, 1).ToUpper())
            </div>
        </div>
    </div>
</div>

                        <div class="card-body p-4 pt-5 d-flex flex-column">
                            <div class="mb-auto mt-2">
                                <h5 class="fw-bold mb-1 text-truncate" title="@item.ListingTitle">@item.ListingTitle</h5>
                                <div class="text-muted small mb-3">
                                    <i class="bi bi-geo-alt-fill text-primary"></i> Egypt
                                </div>
                                
                                <div class="bg-light p-3 rounded-3 mb-3 border border-light">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted small">Check-in</span>
                                        <span class="fw-bold small">@item.CheckIn.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted small">Check-out</span>
                                        <span class="fw-bold small">@item.CheckOut.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <hr class="my-2 opacity-25">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-muted small">Total</span>
                                        <span class="fw-bold text-dark">@item.TotalPrice.ToString("C0")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-2 pt-3 border-top">
                                
                                @if(item.Status == "Pending" || item.Status == "PendingPayment") 
                                {
                                    <form asp-controller="Booking" asp-action="Cancel" asp-route-id="@item.BookId" method="post" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3 fw-bold">Cancel Request</button>
                                    </form>
                                }
                                
                                @if(item.Status == "Confirmed") 
                                {
                                    <button class="btn btn-sm btn-outline-primary rounded-pill px-3 fw-bold" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#reviewModal" 
                                            onclick="setReviewId(@item.ListingId)">
                                        <i class="bi bi-star me-1"></i> Rate Stay
                                    </button>
                                }

                                @if(item.Status == "Cancelled")
                                {
                                    <button class="btn btn-sm btn-light rounded-pill px-3 text-muted" disabled>Cancelled</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 mt-4">
            <div class="mb-4">
                <div class="bg-light rounded-circle d-inline-flex p-4">
                    <i class="bi bi-suitcase-lg text-muted" style="font-size: 4rem; opacity: 0.5;"></i>
                </div>
            </div>
            <h3 class="fw-bold">No trips booked... yet!</h3>
            <p class="text-muted mb-4">Time to dust off your bags and start planning your next adventure.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-dark rounded-pill px-5 py-3 fw-bold shadow-sm">
                Start Exploring
            </a>
        </div>
    }
</div>

<div class="modal fade" id="reviewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold ps-2">How was your stay?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form asp-controller="Guest" asp-action="SubmitReview" method="post">
                    
                    <input type="hidden" id="reviewListingId" name="listingId" />
                    
                    <div class="mb-4 text-center bg-light rounded-3 py-3">
                        <div class="rating-css">
                            <div class="star-icon">
                                <input type="radio" name="rating" id="rating5" value="5"> 
                                <label for="rating5" class="bi bi-star-fill"></label>
                                
                                <input type="radio" name="rating" id="rating4" value="4"> 
                                <label for="rating4" class="bi bi-star-fill"></label>
                                
                                <input type="radio" name="rating" id="rating3" value="3"> 
                                <label for="rating3" class="bi bi-star-fill"></label>
                                
                                <input type="radio" name="rating" id="rating2" value="2"> 
                                <label for="rating2" class="bi bi-star-fill"></label>
                                
                                <input type="radio" name="rating" id="rating1" value="1"> 
                                <label for="rating1" class="bi bi-star-fill"></label>
                            </div>
                        </div>
                        <small class="text-muted">Tap a star to rate</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-uppercase text-muted">Your Review</label>
                        <textarea name="comment" class="form-control bg-light border-0" rows="4" placeholder="What did you love? What could be improved?" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold py-2">Submit Review</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    // This function runs when you click "Rate Stay"
    // It takes the Listing ID from the button and puts it into the hidden form field
    function setReviewId(id) {
        document.getElementById('reviewListingId').value = id;
    }
</script>