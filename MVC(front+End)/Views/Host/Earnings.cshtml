@model MVC_front_End_.Models.HostDashboardViewModel

@{
    ViewData["Title"] = "Earnings";
    Layout = "~/Views/Shared/_HostLayout.cshtml";
}

<div class="dashboard-content">
    <div class="mb-4">
        <h4 class="fw-bold mb-1">Financial Overview</h4>
        <p class="text-muted small mb-0">Track your revenue and payouts</p>
    </div>

    <!-- Top Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0 text-white-50">Total Balance</h6>
                    <i class="bi bi-wallet2 fs-4"></i>
                </div>
                <h2 class="fw-bold mb-0">$@(Model?.TotalEarnings.ToString("N0") ?? "0")</h2>
                <div class="mt-3 small text-white-50">
                    <i class="bi bi-arrow-up-circle text-white me-1"></i> Available for payout
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0 text-muted">Pending Clearance</h6>
                    <div class="icon-orange" style="width:40px;height:40px;display:flex;align-items:center;justify-content:center;border-radius:10px;">
                        <i class="bi bi-hourglass-split fs-5"></i>
                    </div>
                </div>
                <h2 class="fw-bold mb-0 text-dark">$0</h2>
                <div class="mt-3 small text-muted">From pending bookings</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="mb-0 text-muted">Total Payouts</h6>
                    <div class="icon-teal" style="width:40px;height:40px;display:flex;align-items:center;justify-content:center;border-radius:10px;">
                        <i class="bi bi-bank fs-5"></i>
                    </div>
                </div>
                <h2 class="fw-bold mb-0 text-dark">$@(Model?.TotalEarnings.ToString("N0") ?? "0")</h2>
                <div class="mt-3 small text-muted">Lifetime earnings</div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Chart Section -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0">Revenue Analytics</h6>
                    <select class="form-select form-select-sm w-auto border-0 bg-light">
                        <option>This Year</option>
                        <option>Last Year</option>
                    </select>
                </div>
                <div class="card-body">
                    <canvas id="earningsChart" style="height: 300px; width: 100%;"></canvas>
                </div>
            </div>
        </div>

        <!-- Transaction History -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="fw-bold mb-0">Recent Transactions</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @if (Model != null && Model.RecentBookings.Any())
                        {
                            @foreach (var item in Model.RecentBookings.Take(5))
                            {
                                <div class="list-group-item border-0 px-4 py-3 d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="bg-light rounded-circle p-2 text-success">
                                            <i class="bi bi-arrow-down-left"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark small">Payment for @item.ListingTitle</div>
                                            <div class="text-muted" style="font-size: 0.75rem;">@item.CheckInDate</div>
                                        </div>
                                    </div>
                                    <div class="fw-bold text-success">+$@item.Price.ToString("N0")</div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted small">No transactions yet</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('earningsChart').getContext('2d');
        const gradient = ctx.createLinearGradient(0, 0, 0, 300);
        gradient.addColorStop(0, 'rgba(67, 97, 238, 0.2)');
        gradient.addColorStop(1, 'rgba(67, 97, 238, 0.0)');

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'Earnings',
                    data: [1200, 1900, 300, 500, 200, 300, 450, 600, 700, 200, 400, 800], // Placeholder data
                    backgroundColor: '#4361ee',
                    borderRadius: 4,
                    barThickness: 15
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { 
                    y: { 
                        beginAtZero: true, 
                        grid: { borderDash: [5, 5] } 
                    },
                    x: { grid: { display: false } }
                }
            }
        });
    </script>
}