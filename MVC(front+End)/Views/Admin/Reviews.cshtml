@model List<MVC_front_End_.Models.ReviewAdminDTO>

@{
    ViewData["Title"] = "Review Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-content">
    
    <div class="card-header-custom d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-0">Platform Reviews</h4>
            <p class="text-muted small mb-0">Monitor user feedback</p>
        </div>
        <span class="badge bg-primary rounded-pill px-3">Total: @(Model?.Count ?? 0)</span>
    </div>

    <div class="card-modern">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th>Listing</th>
                        <th>Reviewer</th>
                        <th style="width: 120px;">Rating</th>
                        <th>Comment</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@item.ListingTitle</div>
                                    <small class="text-muted">ID: #@item.ReviewId</small>
                                </td>
                                
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-1 me-2 text-primary fw-bold" style="width:30px;height:30px;display:flex;align-items:center;justify-content:center;">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        @item.ReviewerName
                                    </div>
                                </td>
                                
                                <td>
                                    <div class="text-warning small">
                                        @for(int i = 1; i <= 5; i++)
                                        {
                                            if(i <= item.Rating) { <i class="fas fa-star"></i> }
                                            else { <i class="far fa-star text-muted"></i> }
                                        }
                                    </div>
                                    <small class="text-muted fw-bold">@item.Rating/5</small>
                                </td>
                                
                                <td>
                                    <span class="d-inline-block text-truncate" style="max-width: 250px;" title="@item.Comment">
                                        @item.Comment
                                    </span>
                                </td>
                                
                                <td>@item.CreatedAt.ToShortDateString()</td>
                                
                                <td>
                                    <form asp-action="DeleteReview" method="post" onsubmit="return confirm('Delete this review?');">
                                        <input type="hidden" name="id" value="@item.ReviewId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <p class="text-muted">No reviews found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>