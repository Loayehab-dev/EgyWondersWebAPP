@model List<MVC_front_End_.Models.ListingDTO>

@{
    ViewData["Title"] = "Property Listings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // 1. Define the API URL
    string apiBaseUrl = "https://localhost:7151"; 
}

<div class="dashboard-content">
    
    <div class="card-header-custom d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-0">Property Listings</h4>
            <p class="text-muted small mb-0">Manage and review all properties</p>
        </div>
        <span class="badge bg-primary rounded-pill px-3">Total: @(Model?.Count ?? 0)</span>
    </div>

    <div class="card-modern">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 80px;">Image</th>
                        <th>Title</th>
                        <th>Location</th>
                        <th>Price/Night</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            // 2. Logic to get the image URL safely
                            string imageUrl = "https://via.placeholder.com/60?text=No+Img";
                            
                            if (item.Photos != null && item.Photos.Any())
                            {
                                imageUrl = apiBaseUrl + item.Photos[0].Url;
                            }

                            // 3. Logic for Badge Color
                            var statusLower = item.Status?.ToLower() ?? "unknown";
                            var badgeClass = statusLower == "active" ? "bg-success text-success" 
                                           : statusLower == "pending" ? "bg-warning text-warning" 
                                           : "bg-secondary text-secondary";

                            <tr>
                                <td>
                                    <img src="@imageUrl" 
                                         alt="Property" 
                                         class="rounded border" 
                                         style="width: 60px; height: 40px; object-fit: cover;"
                                         onerror="this.onerror=null;this.src='https://via.placeholder.com/60?text=Error';" />
                                </td>
                                <td>
                                    <div class="fw-bold">@item.Title</div>
                                    <small class="text-muted">ID: #@item.ListingId</small>
                                </td>
                                <td>
                                    <i class="fas fa-map-marker-alt text-muted me-1"></i> @item.CityName
                                </td>
                                <td class="fw-bold text-dark">$@item.PricePerNight.ToString("N0")</td>
                                <td>
                                    <span class="badge @badgeClass bg-opacity-10 px-3 py-2 rounded-pill">
                                        @(item.Status ?? "Unknown")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <!-- 1. VIEW BUTTON -->
                                        <a href="@Url.Action("ListingDetails", "Admin", new { id = item.ListingId })" class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <!-- 2. STATUS BUTTONS -->
                                        @if (statusLower != "active")
                                        {
                                            <!-- SHOW APPROVE IF NOT ACTIVE -->
                                            <form asp-action="ChangeListingStatus" method="post">
                                                <input type="hidden" name="id" value="@item.ListingId" />
                                                <input type="hidden" name="status" value="Active" />
                                                <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                        else 
                                        {
                                            <!-- SHOW SUSPEND IF IS ACTIVE (The missing part) -->
                                            <form asp-action="ChangeListingStatus" method="post">
                                                <input type="hidden" name="id" value="@item.ListingId" />
                                                <input type="hidden" name="status" value="Pending" />
                                                <button type="submit" class="btn btn-sm btn-warning" title="Suspend / Deactivate">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }

                                        <!-- 3. DELETE BUTTON -->
                                        <form asp-action="DeleteListing" method="post" onsubmit="return confirm('Are you sure you want to DELETE this listing?');">
                                            <input type="hidden" name="id" value="@item.ListingId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fas fa-folder-open fa-3x mb-3"></i>
                                    <p>No listings found.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>