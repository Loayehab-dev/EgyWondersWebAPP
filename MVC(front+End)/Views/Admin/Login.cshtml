@model MVC_front_End_.Models.LoginDTO

@{
    ViewData["Title"] = "Admin Login";
    Layout = null; // Admin login usually doesn't use the main website layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <style>
        :root { --primary-purple: #8b5cf6; --primary-magenta: #f472b6; --primary-blue: #3b82f6; --light-gray: #f3f4f6; --border-gray: #e5e7eb; --text-dark: #1f2937; --text-gray: #6b7280; }
        body { background-color: #f3f4f6; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; min-height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 20px; }
        .login-card { background: white; border-radius: 16px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); padding: 40px; width: 100%; max-width: 450px; }
        .logo-container { display: flex; justify-content: center; margin-bottom: 20px; }
        .logo-icon { width: 64px; height: 64px; background: var(--primary-purple); border-radius: 12px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3); }
        .logo-icon i { font-size: 32px; color: white; }
        .login-title { font-size: 32px; font-weight: 700; color: var(--text-dark); text-align: center; margin-bottom: 8px; }
        .login-subtitle { font-size: 14px; color: var(--text-gray); text-align: center; margin-bottom: 30px; }
        .form-label { font-weight: 500; color: var(--text-dark); margin-bottom: 8px; font-size: 14px; }
        .input-group-custom { position: relative; margin-bottom: 20px; }
        .input-group-custom .form-control { padding-left: 45px; padding-right: 45px; height: 50px; border: 1px solid var(--border-gray); border-radius: 8px; font-size: 14px; }
        .input-group-custom .form-control:focus { border-color: var(--primary-purple); box-shadow: 0 0 0 0.2rem rgba(139, 92, 246, 0.25); }
        .input-icon { position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: var(--text-gray); font-size: 18px; z-index: 10; }
        .password-toggle { position: absolute; right: 15px; top: 50%; transform: translateY(-50%); color: var(--text-gray); font-size: 18px; cursor: pointer; z-index: 10; background: none; border: none; padding: 0; }
        .password-toggle:hover { color: var(--primary-purple); }
        .form-options { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; }
        .remember-me { display: flex; align-items: center; gap: 8px; }
        .remember-me input[type="checkbox"] { width: 18px; height: 18px; cursor: pointer; accent-color: var(--primary-purple); }
        .remember-me label { font-size: 14px; color: var(--text-dark); margin: 0; cursor: pointer; }
        .forgot-password { color: var(--primary-blue); text-decoration: none; font-size: 14px; font-weight: 500; }
        .btn-signin { width: 100%; height: 50px; background: linear-gradient(135deg, var(--primary-purple), var(--primary-magenta)); border: none; border-radius: 8px; color: white; font-weight: 600; font-size: 16px; display: flex; align-items: center; justify-content: center; gap: 10px; transition: all 0.3s; margin-bottom: 30px; }
        .btn-signin:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(139, 92, 246, 0.4); color: white; }
        .footer-links { text-align: center; margin-top: 30px; margin-bottom: 15px; }
        .footer-links p { font-size: 14px; color: var(--text-gray); margin: 0; }
        .footer-links a { color: var(--primary-blue); text-decoration: none; font-weight: 500; }
        .security-info { display: flex; align-items: center; justify-content: center; gap: 8px; font-size: 12px; color: #6b7280; margin-top: 0; }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="logo-container">
            <div class="logo-icon">
                <i class="bi bi-shield-check"></i>
            </div>
        </div>
        <h1 class="login-title">Admin Portal</h1>
        <p class="login-subtitle">Administrator access only. Sign in to access the admin dashboard.</p>

        <form asp-controller="Admin" asp-action="Login" method="post">
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2 mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="UsernameOrEmail" class="form-label">Email / Username</label>
                <div class="input-group-custom">
                    <i class="bi bi-person input-icon"></i>
                    <input asp-for="UsernameOrEmail" class="form-control" placeholder="Enter your email or username">
                </div>
                <span asp-validation-for="UsernameOrEmail" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group-custom">
                    <i class="bi bi-lock input-icon"></i>
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Enter your password">
                    <button type="button" class="password-toggle" onclick="togglePassword()">
                        <i class="bi bi-eye" id="passwordToggleIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-options">
                <div class="remember-me">
                    <input asp-for="RememberMe" type="checkbox" id="rememberMe">
                    <label for="rememberMe">Remember me</label>
                </div>
                <a href="#" class="forgot-password">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-signin">
                Sign In
                <i class="bi bi-arrow-right"></i>
            </button>
        </form>
    </div>

    <div class="footer-links">
        <p>Need help? <a href="#">Contact Support</a></p>
    </div>

    <div class="security-info">
        <i class="bi bi-lock-fill"></i>
        <span>Secured with 256-bit SSL encryption</span>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('passwordToggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }
    </script>
</body>
</html>