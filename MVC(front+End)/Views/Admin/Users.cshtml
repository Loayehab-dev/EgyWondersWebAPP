@model List<MVC_front_End_.Models.UserDTO>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-content">
    
    <!-- HEADER -->
    <div class="card-header-custom d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-0">User Management</h4>
            <p class="text-muted small mb-0">Manage system access and accounts</p>
        </div>
        <span class="badge bg-primary rounded-pill px-3">Total: @(Model?.Count ?? 0)</span>
    </div>

    <!-- USERS TABLE -->
    <div class="card-modern">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th>User</th>
                        <th>Role</th>
                        <th>Contact</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <!-- USER INFO -->
                                <td>
                                    <div class="d-flex align-items-center">
                                        <!-- Initial Avatar -->
                                        <div class="bg-light rounded-circle p-2 me-3 text-primary fw-bold border" 
                                             style="width:45px; height:45px; display:flex; align-items:center; justify-content:center;">
                                            @(string.IsNullOrEmpty(user.FullName) ? "?" : user.FullName.Substring(0, 1).ToUpper())
                                        </div>
                                        <div>
                                            <div class="fw-bold">@user.FullName</div>
                                            <small class="text-muted">ID: @user.BusinessId</small>
                                        </div>
                                    </div>
                                </td>
                                
                                <!-- ROLES -->
                                <td>
                                    @if(user.Roles != null && user.Roles.Any())
                                    {
                                        @foreach(var role in user.Roles)
                                        {
                                            var badgeClass = role == "Admin" ? "bg-danger" 
                                                           : role == "Host" ? "bg-warning text-dark" 
                                                           : "bg-info text-dark";
                                            <span class="badge @badgeClass me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">User</span>
                                    }
                                </td>
                                
                                <!-- CONTACT -->
                                <td>
                                    <div><i class="fas fa-envelope text-muted me-2"></i> @user.Email</div>
                                    @if(!string.IsNullOrEmpty(user.PhoneNumber))
                                    {
                                        <div class="small text-muted mt-1"><i class="fas fa-phone me-2"></i> @user.PhoneNumber</div>
                                    }
                                </td>
                                
                                <!-- ACTIONS (Delete) -->
                                <td>
                                    <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to DELETE this user? This cannot be undone.');">
                                        <input type="hidden" name="id" value="@user.Id" /> <!-- GUID -->
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete User">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="fas fa-users-slash fa-3x mb-3"></i>
                                    <p>No users found.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>