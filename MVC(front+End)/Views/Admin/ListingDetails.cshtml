@model MVC_front_End_.Models.ListingDTO

@{
    ViewData["Title"] = "Listing Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string apiBaseUrl = "https://localhost:7151";
}

<div class="container py-4">
    <a href="@Url.Action("Listings")" class="btn btn-outline-secondary mb-3">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>

    <div class="row">
        <!-- PHOTOS COLUMN -->
        <div class="col-md-6">
            @if (Model.Photos != null && Model.Photos.Any())
            {
                <div id="listingCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded shadow-sm">
                        @for (int i = 0; i < Model.Photos.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@(apiBaseUrl + Model.Photos[i].Url)" class="d-block w-100" style="height: 400px; object-fit: cover;">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#listingCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#listingCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-secondary text-center py-5">No Photos Available</div>
            }
        </div>

        <!-- INFO COLUMN -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3>@Model.Title</h3>
                    <h5 class="text-primary">$@Model.PricePerNight / night</h5>
                    <hr />
                    <p><strong>Location:</strong> @Model.CityName</p>
                    <p><strong>Category:</strong> @Model.Category</p>
                    <p><strong>Host User ID:</strong> @Model.UserId</p>
                    <p><strong>Capacity:</strong> @Model.Capacity People</p>
                    <p>
                        <strong>Status:</strong> 
                        <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-warning")">
                            @Model.Status
                        </span>
                    </p>

                    <hr />
                    <div class="d-grid gap-2">
                        @if (Model.Status != "Active")
                        {
                            <form asp-action="ChangeListingStatus" method="post">
                                <input type="hidden" name="id" value="@Model.ListingId" />
                                <input type="hidden" name="status" value="Active" />
                                <button class="btn btn-success w-100">Approve Listing</button>
                            </form>
                        }
                        
                        <form asp-action="DeleteListing" method="post" onsubmit="return confirm('Really delete this?');">
                            <input type="hidden" name="id" value="@Model.ListingId" />
                            <button class="btn btn-danger w-100">Delete Listing</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>