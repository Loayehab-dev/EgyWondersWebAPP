@model List<MVC_front_End_.Models.BookingAdminDTO>

@{
    ViewData["Title"] = "Bookings Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-content">
    
    <div class="card-header-custom d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-0">All Bookings</h4>
            <p class="text-muted small mb-0">Track reservations and revenue</p>
        </div>
        <span class="badge bg-primary rounded-pill px-3">Total: @(Model?.Count ?? 0)</span>
    </div>

    <div class="card-modern">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th>ID</th>
                        <th>Listing</th>
                        <th>Guest</th>
                        <th>Dates</th>
                        <th>Total</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="text-muted">#@item.BookingId</span></td>
                                
                                <td>
                                    <div class="fw-bold">@item.ListingTitle</div>
                                </td>
                                
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-1 me-2 text-primary fw-bold" style="width:30px;height:30px;display:flex;align-items:center;justify-content:center;">
                                            <i class="fas fa-user small"></i>
                                        </div>
                                        @item.GuestName
                                    </div>
                                </td>
                                
                                <td>
                                    <div class="small">
                                        <div><i class="fas fa-calendar-alt text-muted me-1"></i> @item.CheckInDate.ToShortDateString()</div>
                                        <div><i class="fas fa-arrow-right text-muted me-1"></i> @item.CheckOutDate.ToShortDateString()</div>
                                    </div>
                                </td>
                                
                                <td class="fw-bold text-success">$@item.TotalPrice.ToString("N0")</td>
                                
                                <td>
                                    @{
                                        var badge = item.Status?.ToLower() == "confirmed" ? "bg-success" 
                                                  : item.Status?.ToLower() == "cancelled" ? "bg-danger" 
                                                  : "bg-warning text-dark";
                                    }
                                    <span class="badge @badge">@item.Status</span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No bookings found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>