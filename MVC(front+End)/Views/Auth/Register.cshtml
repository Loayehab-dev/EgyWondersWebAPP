@model MVC_front_End_.Models.RegisterDTO 

@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 text-center">
                    <h4 class="fw-bold mb-0">Join EgyWonders</h4>
                    <p class="text-muted small">Create an account to start your journey</p>
                </div>

                <div class="card-body px-4 pb-4">
                    <form asp-action="Register" method="post">
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2 mb-3"></div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label small">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="John" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label small">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Doe" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label small">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="johndoe" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label small">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label small">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label small">Phone Number</label>
                                <input asp-for="Phone" class="form-control" placeholder="+20..." />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label small">Date of Birth</label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Gender" class="form-label small">Gender</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">Select...</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Nationality" class="form-label small">Nationality</label>
                                 <select asp-for="Nationality" class="form-select">
                            <option disabled>Select Nationality...</option>
                            <option value="Egyptian">Egyptian 🇪🇬</option>
                            <option value="American">American 🇺🇸</option>
                            <option value="British">British 🇬🇧</option>
                            <option value="Saudi">Saudi 🇸🇦</option>
                            <option value="Emirati">Emirati 🇦🇪</option>
                            <option value="French">French 🇫🇷</option>
                            <option value="German">German 🇩🇪</option>
                            <option value="Russian">Russian 🇷🇺</option>
                            <option value="Chinese">Chinese 🇨🇳</option>
                            <option value="Indian">Indian 🇮🇳</option>
                            <option value="Canadian">Canadian 🇨🇦</option>
    
                            <option disabled>--- Other African/Middle Eastern ---</option>
                            <option value="Algerian">Algerian 🇩🇿</option>
                            <option value="Moroccan">Moroccan 🇲🇦</option>
                            <option value="Jordanian">Jordanian 🇯🇴</option>
                            <option value="Turkish">Turkish 🇹🇷</option>
                            <option value="Nigerian">Nigerian 🇳🇬</option>
    
                            <option disabled>--- Other ---</option>
                            <option value="Other">Other</option>
                        </select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Role" class="form-label small">I want to join as:</label>
                            <select asp-for="Role" class="form-select">
                                <option value="Guest">Guest (Traveler)</option>
                                <option value="Host">Host (Rent my place)</option>
                                <option value="TourGuide">Tour Guide</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3 shadow-sm py-2">
                            Create Account
                        </button>
                        </form>
                </div>
                
                <div class="card-footer bg-light border-top-0 text-center py-3 rounded-bottom-3">
                    <p class="text-muted small mb-0">
                        Already have an account? 
                        <a asp-controller="Auth" asp-action="Login" class="text-decoration-none fw-bold">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}