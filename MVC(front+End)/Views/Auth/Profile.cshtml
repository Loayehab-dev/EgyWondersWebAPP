@model MVC_front_End_.Models.UserProfileDTO

@{
    ViewData["Title"] = "My Profile";
    
    // Calculate Initials
    var f = !string.IsNullOrEmpty(Model.FirstName) ? Model.FirstName.Substring(0, 1) : "U";
    var l = !string.IsNullOrEmpty(Model.LastName) ? Model.LastName.Substring(0, 1) : "";
    var initials = (f + l).ToUpper();
    
    // Roles Display
    var rolesDisplay = Model.Roles != null && Model.Roles.Any() ? string.Join(", ", Model.Roles) : "Member";
}

<div class="container" style="margin-top: 100px; margin-bottom: 80px;">
    
    <!-- Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success rounded-3 mb-4">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-9">
            
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="fw-bold mb-0">My Profile</h1>
                @if(Model.IsActive)
                {
                    <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill">
                        <i class="bi bi-check-circle-fill me-1"></i> Active
                    </span>
                }
            </div>

            <!-- Profile Card -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Avatar Section -->
                        <div class="col-md-4 bg-light d-flex flex-column align-items-center justify-content-center p-5 border-end text-center">
                            <div class="bg-dark text-white rounded-circle d-flex align-items-center justify-content-center mb-3 shadow" 
                                 style="width: 100px; height: 100px; font-size: 2.5rem; font-weight: bold;">
                                @initials
                            </div>
                            <h4 class="fw-bold mb-1">@Model.FirstName @Model.LastName</h4>
                            <p class="text-muted small mb-2">@Model.Username</p>
                            <span class="badge bg-white text-dark border rounded-pill px-3 shadow-sm">@rolesDisplay</span>
                        </div>
                        
                        <!-- Details Section -->
                        <div class="col-md-8 p-5">
                            <h5 class="fw-bold border-bottom pb-3 mb-4">Personal Information</h5>
                            
                            <div class="row g-4">
                                <div class="col-12">
                                    <label class="text-muted small text-uppercase fw-bold d-block mb-1">Email</label>
                                    <span class="fs-5 fw-medium text-dark">@Model.Email</span>
                                </div>

                                <div class="col-sm-6">
                                    <label class="text-muted small text-uppercase fw-bold d-block mb-1">Phone</label>
                                    <span class="fs-6 text-dark">@(string.IsNullOrEmpty(Model.Phone) ? "Not provided" : Model.Phone)</span>
                                </div>

                                <div class="col-sm-6">
                                    <label class="text-muted small text-uppercase fw-bold d-block mb-1">Nationality</label>
                                    <span class="fs-6 text-dark">@(string.IsNullOrEmpty(Model.Nationality) ? "Not provided" : Model.Nationality)</span>
                                </div>

                                <div class="col-sm-6">
                                    <label class="text-muted small text-uppercase fw-bold d-block mb-1">Date of Birth</label>
                                    <span class="fs-6 text-dark">
                                        @(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("MMM dd, yyyy") : "Not provided")
                                    </span>
                                </div>

                                <div class="col-sm-6">
                                    <label class="text-muted small text-uppercase fw-bold d-block mb-1">Gender</label>
                                    <span class="fs-6 text-dark">@(string.IsNullOrEmpty(Model.Gender) ? "Not provided" : Model.Gender)</span>
                                </div>
                            </div>

                            <div class="mt-4 pt-4 border-top d-flex gap-3">
                             
                                <a asp-controller="Auth" asp-action="EditProfile" class="btn btn-dark rounded-pill px-4 fw-bold">
    Edit Profile
</a>

                                <a asp-controller="Guest" asp-action="Trips" class="btn btn-outline-dark rounded-pill px-4">
                                    View My Trips
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>